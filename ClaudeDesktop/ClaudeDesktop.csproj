<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\claude.ico</ApplicationIcon>
    <AssemblyName>ClaudeDesktop</AssemblyName>
    <RootNamespace>ClaudeDesktop</RootNamespace>
    <Version>1.0.0</Version>
    <Authors>DS_ClaudeClient</Authors>
    <Description>A custom Windows desktop client for Claude AI with enhanced features</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2903.40" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\claude.ico" />
    <EmbeddedResource Include="Scripts\*.js" />
  </ItemGroup>

</Project>
