<Window x:Class="DS_ClaudeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="DS Claude Client"
        Height="700" Width="1200"
        MinHeight="400" MinWidth="600"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="36"
                      ResizeBorderThickness="6"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Menu Button -->
                    <Button Grid.Column="0"
                            Style="{StaticResource IconButtonStyle}"
                            Click="MenuButton_Click"
                            ToolTip="Menu"
                            Margin="4,0,0,0"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#x2630;" FontSize="16"/>
                    </Button>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="DS Claude Client"
                               Foreground="{StaticResource TextBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="13"/>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,4,0"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="OptionsButton_Click"
                                ToolTip="Options">
                            <TextBlock Text="&#x2699;" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="ToggleTopmost_Click"
                                x:Name="TopmostButton"
                                ToolTip="Toggle Always on Top">
                            <TextBlock Text="&#x1F4CC;" FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="ToggleSnippets_Click"
                                x:Name="SnippetsToggleButton"
                                ToolTip="Toggle Snippets Panel">
                            <TextBlock Text="&#x1F4CB;" FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="MinimizeButton_Click"
                                ToolTip="Minimize">
                            <TextBlock Text="&#x2212;" FontSize="16" Margin="0,-4,0,0"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="MaximizeButton_Click"
                                x:Name="MaximizeButton"
                                ToolTip="Maximize">
                            <TextBlock Text="&#x25A1;" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="CloseButton_Click"
                                ToolTip="Close">
                            <TextBlock Text="&#x2715;" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel: WebView + Input -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="100" MinHeight="60" MaxHeight="400"/>
                    </Grid.RowDefinitions>

                    <!-- WebView2 for Claude.ai -->
                    <wv2:WebView2 x:Name="ClaudeWebView"
                                  Grid.Row="0"/>

                    <!-- Resizable Splitter -->
                    <GridSplitter Grid.Row="1"
                                  Height="3"
                                  HorizontalAlignment="Stretch"
                                  Background="{StaticResource BorderBrush}"
                                  Cursor="SizeNS"/>

                    <!-- Native Text Input Area -->
                    <Border Grid.Row="2"
                            Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="12,10">
                        <Grid HorizontalAlignment="Center" MaxWidth="800">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="400"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="MessageInput"
                                     Grid.Column="0"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,10,0"
                                     KeyDown="MessageInput_KeyDown"
                                     Style="{StaticResource MessageInputStyle}"/>

                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Bottom"
                                        Orientation="Vertical">
                                <Button Content="Send"
                                        Click="SendButton_Click"
                                        Style="{StaticResource SendButtonStyle}"
                                        Padding="16,10"
                                        ToolTip="Send message (Ctrl+Enter)"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Snippets Panel -->
                <Border x:Name="SnippetsPanel"
                        Grid.Column="1"
                        Width="280"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Snippets Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Snippets"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"/>
                                <Button Grid.Column="1"
                                        Style="{StaticResource IconButtonStyle}"
                                        Click="AddSnippet_Click"
                                        ToolTip="Add Snippet">
                                    <TextBlock Text="+" FontSize="18" FontWeight="Bold"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Search Box -->
                        <TextBox x:Name="SearchBox"
                                 Grid.Row="1"
                                 Style="{StaticResource SearchTextBoxStyle}"
                                 Margin="12,10"
                                 TextChanged="SearchBox_TextChanged">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{StaticResource BackgroundBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <Grid>
                                            <TextBlock Text="Search snippets..."
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Padding="10,8"
                                                       Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibility}}"/>
                                            <ScrollViewer x:Name="PART_ContentHost" Padding="10,8"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>

                        <!-- Snippets List -->
                        <ScrollViewer Grid.Row="2"
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="12,0">
                            <ItemsControl x:Name="SnippetsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource SnippetItemStyle}"
                                                MouseLeftButtonDown="Snippet_MouseLeftButtonDown"
                                                Tag="{Binding}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding Title}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>

                                                <StackPanel Grid.Row="0" Grid.Column="1"
                                                            Orientation="Horizontal">
                                                    <Button Style="{StaticResource IconButtonStyle}"
                                                            Click="EditSnippet_Click"
                                                            Tag="{Binding}"
                                                            ToolTip="Edit"
                                                            Padding="4,2">
                                                        <TextBlock Text="&#x270E;" FontSize="12"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButtonStyle}"
                                                            Click="DeleteSnippet_Click"
                                                            Tag="{Binding}"
                                                            ToolTip="Delete"
                                                            Padding="4,2">
                                                        <TextBlock Text="&#x2715;" FontSize="10"/>
                                                    </Button>
                                                </StackPanel>

                                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                                           Text="{Binding Preview}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,4,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
