<Window x:Class="DS_ClaudeClient.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options"
        Height="520" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource BackgroundBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Options"
                               Foreground="{StaticResource TextBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="13"/>
                    <Button HorizontalAlignment="Right"
                            Style="{StaticResource IconButtonStyle}"
                            Click="CloseButton_Click"
                            Margin="0,0,4,0">
                        <TextBlock Text="&#x2715;" FontSize="14"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20,20,20,10">
                <!-- Font Family -->
                <TextBlock Text="Font Family"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="FontFamilyComboBox"
                          SelectionChanged="FontFamilyComboBox_SelectionChanged"
                          Padding="8,6"
                          Margin="0,0,0,16"/>

                <!-- Font Size -->
                <TextBlock Text="Font Size"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="FontSizeSlider"
                            Minimum="10" Maximum="24"
                            Value="14"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            ValueChanged="FontSizeSlider_ValueChanged"/>
                    <TextBlock x:Name="FontSizeLabel"
                               Grid.Column="1"
                               Text="14px"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <!-- Text Area Width -->
                <TextBlock Text="Text Area Width"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="SemiBold"
                           Margin="0,16,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="TextAreaWidthSlider"
                            Minimum="400" Maximum="1600"
                            Value="800"
                            TickFrequency="100"
                            IsSnapToTickEnabled="True"
                            ValueChanged="TextAreaWidthSlider_ValueChanged"/>
                    <TextBlock x:Name="TextAreaWidthLabel"
                               Grid.Column="1"
                               Text="800px"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>

                <!-- Text Area Font Family -->
                <TextBlock Text="Text Area Font"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="SemiBold"
                           Margin="0,16,0,8"/>
                <ComboBox x:Name="TextAreaFontFamilyComboBox"
                          SelectionChanged="TextAreaFontFamilyComboBox_SelectionChanged"
                          Padding="8,6"
                          Margin="0,0,0,16"/>

                <!-- Text Area Font Size -->
                <TextBlock Text="Text Area Font Size"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="TextAreaFontSizeSlider"
                            Minimum="10" Maximum="24"
                            Value="14"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            ValueChanged="TextAreaFontSizeSlider_ValueChanged"/>
                    <TextBlock x:Name="TextAreaFontSizeLabel"
                               Grid.Column="1"
                               Text="14px"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="20,10,20,20">
                <Button Content="Cancel"
                        Style="{StaticResource DialogButtonStyle}"
                        Click="CancelButton_Click"
                        Margin="0,0,10,0"/>
                <Button Content="Save"
                        Style="{StaticResource PrimaryDialogButtonStyle}"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
