{
  "name": "claude-desktop-client",
  "version": "1.0.0",
  "description": "A custom Windows desktop client for Claude AI",
  "main": "dist/main/main.js",
  "author": "DS_ClaudeClient",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/renderer/index.html && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "webpack --config webpack.renderer.config.js --watch",
    "package": "npm run build && electron-builder --win",
    "package:all": "npm run build && electron-builder --win --mac --linux"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "electron-store": "^8.1.0",
    "marked": "^12.0.0",
    "highlight.js": "^11.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.claude.desktop",
    "productName": "Claude Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
